
<section>
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">

                <div>
                    <div class="text-center">
                      <%= flash[:error] %>
                        <h3 class="under-border">管理者ログイン</h3>
                    </div>
                    <div>

                      <div class="row">
                          <div class="col-xs-offset-1 col-xs-10">
                              <div class="text-center">
                                  <h4>メールアドレスと<br>パスワードを入力してください。</h4>
                              </div>
                          </div>
                      </div>



                        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                        <div class="form-group">
                        <%= f.email_field :email, autofocus: true, class:"form-control", id:"inputEmail", placeholder:"メールアドレス"%>
                        </div>
                        <div class="form-group">
                        <%= f.password_field :password, autocomplete: "off", class:"form-control", id:"inputPassword", placeholder:"パスワード" %>
                        </div>


                        <div class="text-center">
                          <%= f.submit "サインイン", class: "btn btn-success"  %>
                        </div>

                        <% end %> 



                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

