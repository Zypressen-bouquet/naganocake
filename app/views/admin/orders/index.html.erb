<div class="container">
  <div class="row">
    <h3 class="under-border">注文履歴一覧</h3>
    <div class="col-xs-10">
          <table class="table">
            <thead>
              <tr>
                <th>購入日時</th>
                <th>購入者</th>
                <th>注文個数</th>
                <th>注文ステータス</th>
              </tr>
            </thead>
            <tbody>
              <% @orders.each do |order| %>
              <tr>
                <td><%= link_to order.created_at.strftime("%Y/%m/%d"), admin_order_path(order.id),data: {:turbolinks => "false" } %></td>
                <td>
                  <%= order.name %></br>
                </td>
                <td>
                  <p><%= order.sum_units%></p>
                </td>
                <td><%= t("enums.order.status.#{order.status}") %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
    </div>    
  </div>
</div>