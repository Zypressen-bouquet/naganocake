<div class="container">
  <div class="row">
    <h3 class="under-border">商品 詳細画面</h3>
    <div class="col-xs-4">
          <%= attachment_image_tag @product, :image, :limit, 300, 300, fallback: "no-image.png",size: "300x300" %>
    </div>
    <div class="col-xs-8">
      <div class="form-group row">
        <div class="col-xs-2">
          <label>商品名</label>
        </div>
        <div class="col-xs-6">
          <%= @product.name %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-xs-2">
          <label>商品説明</label>
        </div>
        <div class="col-xs-6">
          <%= @product.description %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-xs-2">
          <label>ジャンル</label>
        </div>
        <div class="col-xs-6">
          <%= @product.genre.genre %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-xs-2">
          <label>税込価格</label>
        </div>
        <div class="col-xs-6">
          <%= disp_tax_price(@product.unit_price) %>(<%= disp_price(@product.unit_price) %>)円
        </div>
      </div>

      <div class="form-group row">
        <div class="col-xs-2">
          <label>ステータス</label>
        </div>
        <div class="col-xs-6">
          <%= t("enums.product.status.#{@product.status}") %>
        </div>
      </div>
    </div>  
  </div>
  <div class="text-right">
    <%= link_to "編集する",edit_admin_product_path(@product.id),class: "btn btn-primary" %>
  </div>
</div>