<div class="container">
	<div class="row">
	  <h3 class="under-border">会員詳細画面</h3>
	</div>

  <div class="row">
    <div class="col-xs-4">
    	  <table class="table">
    	  	<tbody>
    	  		<tr>
    	  		  <td>会員ID</td>
    	  		  <td>
                <div class="col-xs-2">
                <%= @user.id %>
                </div>
                <div class="col-xs-6">
                  <% if @user.status == true %>
                    <div class="bg-primary text-white text-center">有効会員</div>
                  <% else %>
                    <div class="bg-red text-white text-center">退会済み</div>
                  <% end %>
                </div>

                </td>
              </tr>

              <tr>
                <td>氏名</td>
                <td><%= @user.last_name %>
                	<%= @user.first_name %></td>
              </tr>

              <tr>
                <td>フリガナ</td>
                <td><%= @user.last_name_kana %>
                	<%= @user.first_name_kana %></td>
              </tr>

              <tr>
                <td>郵便番号</td>
                <td><%= @user.post_code %></td>
              </tr>

              <tr>
                <td>住所</td>
                <td><%= @user.address %></td>
              </tr>

              <tr>
                <td>電話番号</td>
                <td><%= @user.phone_number %></td>
              </tr>

              <tr>
                <td>メールアドレス</td>
                <td><%= @user.email %></td>
              </tr>
          </tbody>
        </table>
      </div>
    </div>
    <div>
      <%= link_to "編集する", edit_admin_user_path,class: "btn btn-primary" %>
      <%= link_to "注文履歴一覧",admin_orders_path,class: "btn btn-danger" %>
    </div>
</div>

