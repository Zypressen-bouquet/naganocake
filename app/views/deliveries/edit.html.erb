　<div class="container">
	<div class="row">
		<div class="offset-1">
			<h3 class="under-border">配送先編集</h3>
		</div>
	</div>

 <div class="row">
 	<div class="col-xs-9">
	 <%= form_for(@delivery) do |f| %>
	 	<div class="form-group">
			<label class = "delivery_label">郵便番号(ハイフンなし)</label>
			<%= f.text_field :post_code, class: "delivery_form_control offset-1 col-4" %>
		</div>

		<div class="form-group">
			<label class = "delivery_label">住所</label>
			<%= f.text_field :address, class: "delivery_address_control offset-1 col-8" %>
		</div>

		<div class="form-group">
			<label class = "delivery_label">宛名</label>
			<%= f.text_field :name, class: "delivery_form_control form-control offset-1 col-4" %>
		</div>

		<div class="row">
			<%= f.submit "編集する", class: "delivery_edit_button btn btn-outline-danger btn-primary" %>
		</div>
	<% end %>
 </div>

</div>
