<div class="container">
    <div class="row">
    	<div class="col-xs-8">
    		<h3 class="under-border">配送先登録/一覧</h3>
      <div class = "row deliveries-registration">
         <div class = "col-xs-12">
    		<%= form_for(@delivery_new) do |f| %>
            <div class="form-group row">
               <label class = "delivery_label" >郵便番号(ハイフンなし)</label>
          		<%= f.text_field :post_code, class: "delivery_form_control", placeholder: "郵便番号" %>
            </div>
            <div class="form-group row">
               <label class = "delivery_label" >住所</label>
          		<%= f.text_field :address, class: "delivery_address_control", placeholder: "住所" %>
            </div>
            <div class="form-group row">
               <label class = "delivery_label" >宛名</label>
          		<%= f.text_field :name, class: "delivery_form_control col-6", placeholder: "宛名" %>
            </div>
            <div class="row">
        		  <%= f.submit "登録する", class: "delivery_edit_button btn btn-primary btn-outline-danger mx-auto" %>
            </div>
         </div>
         <% end %>
   </div>

    	  <table class="table table table-borderless table-hover">
          <thead>
             <th>郵便番号</th>
             <th>住所</th>
             <th>宛名</th>
             <th></th>
          </thead>
        <tbody>
        <% @deliveries.each do |delivery| %>
         <tr class="haisou">
               <td><%= delivery.post_code %></td>
               <td><%= delivery.address %></td>
               <td><%= delivery.name %></td>
               <td><%= link_to "編集する", edit_delivery_path(delivery.id),  class: "btn btn-success edit_delivery" %>
               <%= link_to "削除する", delivery_path(delivery.id), method: :delete ,data: { confirm: '本当に削除してよろしいですか?' }, class: "btn btn-danger" %>
               </td>
            </tr>
        <% end %>
         </tbody>
         </table>
    	</div>
    </div>
</div>