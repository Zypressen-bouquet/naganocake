

<div class="container">
  <div class="row">
    <div class="col-xs-4">
    <h3 class="under-border">登録情報</h3>
    <%= link_to "編集する", edit_user_path(current_user), class: "btn btn-primary" %>
    <%= link_to "パスワードを変更", edit_user_registration_path, class: "btn btn-primary" %>


            <table class="table">
              <tr>
                    <td>氏名</td>
                    <td>
                        <%= @user.last_name %>
                        <%= @user.first_name %>
                    </td>
              </tr>

              <tr>
                    <td>フリガナ</td>
                    <td>
                        <%= @user.last_name_kana %>
                        <%= @user.first_name_kana %>
                    </td>
              </tr>

              <tr>
                    <td>郵便番号</td>
                    <td><%= @user.post_code %></td>
              </tr>

              <tr>
                    <td>住所</td>
                    <td><%= @user.address %></td>
              </tr>

              <tr>
                    <td>電話番号</td>
                    <td><%= @user.phone_number %></td>
              </tr>

              <tr>
                    <td>メールアドレス</td>
                <td><%= @user.email %></td>
              </tr>
            </table>


          <div>
            <h3 class="under-border">配送先</h3>
            <%= link_to "一覧を見る", deliveries_path, class: "btn btn-primary" %>
          </div>
          <div>
            <h3 class="under-border">注文を見る</h3>
            <%= link_to "一覧を見る", orders_path(current_user), class: "btn btn-primary" %>
          </div>
      </div>
    </div>
</div>
