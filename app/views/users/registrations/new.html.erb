<div class="container">
  <div class="row">
    <div class="col-xs-offset-2">
      <h3 class="form-header-title under-border">新規会員登録</h3>            
    </div>        
  </div>
  <div class="row user-edit">
    <div class="col-xs-offset-2 col-xs-8">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="form-group row">
          <div class="col-xs-2">
            <label>お名前</label>
          </div>
          <div class="col-xs-1">
            <%= f.label :last_name, "(姓)" %>      
          </div>
          <div class="col-xs-4">
            <%= f.text_field :last_name, placeholder:"例）田中", class: "form-control" %>
          </div>
          <div class="col-xs-1">
            <%= f.label :first_name, "(名)" %>
          </div>
          <div class="col-xs-4">
            <%= f.text_field :first_name, placeholder:"例）太郎", class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-xs-2">
            <label>フリガナ</label>
          </div>
          <div class="col-xs-1">
            <%= f.label :last_name, "(ｾｲ)" %>
          </div>
          <div class="col-xs-4">
            <%= f.text_field :last_name_kana, placeholder:"例）タナカ", class: "form-control" %>
          </div>
          <div class="col-xs-1">
            <%= f.label :last_name, "(ﾒｲ)" %>
          </div>
          <div class="col-xs-4">
            <%= f.text_field :first_name_kana, placeholder:"例）タロウ", class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-xs-3">
            <label>郵便番号</label>
          </div>
          <div class="col-xs-9">
            <%= f.text_field :post_code, placeholder:"ハイフン無し7桁の郵便番号", class: "form-control" %>              
          </div>
        </div>

        <div class="form-group row">
          <div class="col-xs-3">
            <label>住所</label>
          </div>
          <div class="col-xs-9">
            <%= f.text_field :address, class: "form-control" %>            
          </div>
        </div>

        <div class="form-group row">
          <div class="col-xs-3">
            <label>電話番号</label>
          </div>
          <div class="col-xs-9">
            <%= f.text_field :phone_number, placeholder:"10桁または11桁の電話番号", class: "form-control offset-1 col-11" %>          
          </div>
        </div>

        <div class="form-group row">
          <div class="col-xs-3">
            <label>メールアドレス</label>
          </div>
          <div class="col-xs-9">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"例）nagano-cake@gmail.com", class: "form-control offset-1 col-11" %>                
          </div>
        </div>

        <div class="form-group row">
          <div class="col-xs-3">
            <label>パスワード（6文字以上）</label>
          </div>
          <div class="col-xs-9">
            <%= f.password_field :password, placeholder:"パスワード", autocomplete: "new-password", class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-xs-3">
            <label>パスワード確認</label>
          </div>
          <div class="col-xs-9">
            <%= f.password_field :password_confirmation, placeholder:"パスワード確認", autocomplete: "new-password", class: "form-control" %>
          </div>
        </div>

        <div class="row">
          <div class="col-xs-3 col-xs-offset-5">
            <%= f.submit "会員登録", class: "btn btn-success btn-block"  %>          
          </div>
        </div>
      <% end %>
    </div>
    <div class="row">
      <div class="col-xs-offset-2 col-xs-8">
        <%= link_to "会員の方はこちらからログイン", new_session_path(resource_name), class: "btn btn-sm btn-outline-danger" %>
      </div>
    </div>
  </div>
</div>