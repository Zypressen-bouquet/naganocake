
<div class="container">
  <div class="row">
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="col-md-4 col-md-offset-4">
      <h2 class="under-border">パスワード変更</h2>

        <div class="row my-3">

            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
             <%= render "devise/shared/error_messages", resource: resource %>
              <div class="form-group">
                <%= f.label :新しいパスワードを入力 %>
                <%= f.password_field :password, autocomplete: "new-password", placeholder: "新しいパスワード", class: "form-control offset-1 col-10" %>
              </div>

              <div class="form-group">
                <%= f.label :もう一度入力してください %>
                <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "新しいパスワード（確認用）", class: "form-control offset-1 col-10" %>
              </div>

              <div class="form-group">
                <%= f.label :現在のパスワードを入力 %>
                <%= f.password_field :current_password, autocomplete: "current-password", placeholder: "現在のパスワード", class: "form-control offset-1 col-10" %>
              </div>

              <div class="ps-change">
                <%= f.submit "パスワードを変更する", class: "btn btn-danger" %>
              </div>
            <% end %>
          </div>
    </div>
  </div>
</div>

