
<div class="container product-top">
 <div class="row">
    <div class="col-xs-2">
      <%= render 'genrebox', genres: @genres %>
     </div>

    <div class="col-xs-9 product-index">

<!--商品ジャンルの表示-->
      <div class="row">
        <h3 class="under-border">
          <% if params[:genre_id] %>
            <%= @genre.genre %>
          <% else %>
            すべての商品
          <% end %>
        </h3>
      </div>

<!-- 販売可の商品件数表示 -->
      <div class="row">
        <strong>
          全<%= @products_all.count %>件
        </strong>
      </div>

<!-- 全てまたは選択ジャンル別の商品表示-->
        <div class="row">
            <% @products.each do |product| %>
                <div class="col-xs-3 mt-3 product-photo"> <!--1個ずつまとめてカラムを指定する-->
                    <div class="mx-auto imgWrap">
                    <%= link_to product_path(product) do %>
                    <%= attachment_image_tag product, :image, :limit, 200,200, format: 'jpeg', fallback: 'no-image.png',size: "200x200" %>
                    </div>
                    <% end %><br>
                    <strong><%= product.name %></strong><br>
                    <span><%= disp_tax_price(product.unit_price)%>円(税込)</span><br>
                </div>
            <% end %>
        </div>
    </div>

   </div>
  </div>





    <!-- ページネーション -->
 <div class="container">
    <div class="row">
     <div class="col-xs-3">
     </div>
     <div class="col-xs-6">
        <%= paginate @products %>
     </div>
    </div>
 </div>
    <!-- ページネーション -->

 